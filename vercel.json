{
    "version": 2,
    "builds": [
      { "src": "scripts/**/*.js", "use": "@vercel/node" },
      { "src": "index.js", "use": "@vercel/node" },
      { "src": "views/**/*.html", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "scripts/$1" },
      { "src": "/(.*)", "dest": "$1" }
    ],
    "public": true
  }